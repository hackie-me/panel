{
    "name": "api-config-editor",
    "version": "1.0.1",
    "description": "A tool for editing API configuration files across multiple projects",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win",
        "pack": "electron-packager . APIConfigEditor --platform=win32 --arch=x64 --icon=icon.ico --out=dist --overwrite"
    },
    "dependencies": {
        "electron-store": "^8.1.0",
        "form-data": "^4.0.0",
        "glob": "^8.1.0"
    },
    "devDependencies": {
        "electron": "^22.0.0",
        "electron-builder": "^26.0.12",
        "electron-packager": "^17.1.1"
    },
    "build": {
        "appId": "com.hardik.apiconfigeditor",
        "productName": "API Config Editor",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true
        },
        "portable": {
            "artifactName": "APIConfigEditor-Portable-${version}.exe"
        }
    }
}